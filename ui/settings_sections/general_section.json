{
  "namespace": "general_section",

  "sound_section": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "$spatialPatternsPadding": [ 20, 20 ], // Less padding between sliders - Alien
    "$audioSlidersSize": [ "75% - 2px", 16 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "sound_button_toggle",
